<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.schedule_redactor.ScheduleRedactorFragment">
    <!--
    android:textColor="#000000"
    -->

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                >


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <Spinner
                        android:id="@+id/spinner_pageselect"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <AutoCompleteTextView
                        android:id="@+id/autoCompleteTextView_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Название"
                        android:text="" />

                    <Button
                        android:id="@+id/button_save_load"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@android:color/transparent"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:text="Сохранить\nЗагрузить" />
                    <Button
                        android:id="@+id/button_fileload_filechecker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@android:color/transparent"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:text="Загрузить из файла\nЗагрузить с ISPU" />
                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:id="@+id/layout_daychanger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        >
                        <EditText
                            android:id="@+id/editText_day1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Понедельник"
                            />
                        <EditText
                            android:id="@+id/editText_day2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Вторник"
                            />
                        <EditText
                            android:id="@+id/editText_day3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Среда"
                            />

                    </LinearLayout>
                </HorizontalScrollView>
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        >
                        <EditText
                            android:id="@+id/editText_day4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Четверг"
                            />
                        <EditText
                            android:id="@+id/editText_day5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Пятница"
                            />
                        <EditText
                            android:id="@+id/editText_day6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Суббота"
                            />
                        <EditText
                            android:id="@+id/editText_day7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Воскресенье"
                            />

                    </LinearLayout>
                </HorizontalScrollView>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        >
                        <Spinner
                            android:id="@+id/spinner_circlemode"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />
                        <Button
                            android:id="@+id/button_changeweek"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="@android:color/transparent"
                            android:textColor="@color/black"
                            android:textSize="10sp"
                            android:text="Поменять неделю\n1 неделя" />
                        <Button
                            android:id="@+id/button_firstweekchange"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="@android:color/transparent"
                            android:textColor="@color/black"
                            android:textSize="10sp"
                            android:text="1 неделя четная\n(Эта неделя нечетная)" />
                        <Button
                            android:id="@+id/button_cutwritings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="@android:color/transparent"
                            android:textColor="@color/black"
                            android:textSize="10sp"
                            android:text="Сократить запись" />
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/layout_timechanger"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Начало (00:00):"
                                />
                            <EditText
                                android:id="@+id/editText_time_start_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="1"
                                android:inputType="time"
                                />
                            <EditText
                                android:id="@+id/editText_time_start_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="2"
                                />
                            <EditText
                                android:id="@+id/editText_time_start_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="3"
                                />
                            <EditText
                                android:id="@+id/editText_time_start_4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="4"
                                />
                            <EditText
                                android:id="@+id/editText_time_start_5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="5"
                                />
                            <EditText
                                android:id="@+id/editText_time_start_6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="6"
                                />
                            <EditText
                                android:id="@+id/editText_time_start_7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="7"
                                />
                            <EditText
                                android:id="@+id/editText_time_start_8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="8"
                                />
                            <EditText
                                android:id="@+id/editText_time_start_9"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="9"
                                />
                            <EditText
                                android:id="@+id/editText_time_start_10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="10"
                                />
                        </LinearLayout>
                    </HorizontalScrollView>
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Конец (00:00):"
                                />
                            <EditText
                                android:id="@+id/editText_time_end_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="1"
                                />
                            <EditText
                                android:id="@+id/editText_time_end_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="2"
                                />
                            <EditText
                                android:id="@+id/editText_time_end_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="3"
                                />
                            <EditText
                                android:id="@+id/editText_time_end_4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="4"
                                />
                            <EditText
                                android:id="@+id/editText_time_end_5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="5"
                                />
                            <EditText
                                android:id="@+id/editText_time_end_6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="6"
                                />
                            <EditText
                                android:id="@+id/editText_time_end_7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="7"
                                />
                            <EditText
                                android:id="@+id/editText_time_end_8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="8"
                                />
                            <EditText
                                android:id="@+id/editText_time_end_9"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="9"
                                />
                            <EditText
                                android:id="@+id/editText_time_end_10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="10"
                                />
                        </LinearLayout>
                    </HorizontalScrollView>
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Даты:" />
                            <EditText
                                android:id="@+id/editTextDate_startdate"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:ems="10"
                                android:hint="Начала расписания"
                                android:inputType="date" />
                            <EditText
                                android:id="@+id/editTextDate_enddate"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:ems="10"
                                android:hint="Конца расписания"
                                android:inputType="date" />
                        </LinearLayout>
                    </HorizontalScrollView>
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center"
                            >
                            <Spinner
                                android:id="@+id/spinner_time_dayselect"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />
                            <Button
                                android:id="@+id/button_time_saveday"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:backgroundTint="@android:color/transparent"
                                android:textColor="@color/black"
                                android:textSize="10sp"
                                android:text="Сохранить\nСохранить на все дни" />
                            <Button
                                android:id="@+id/button_time_clear"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:backgroundTint="@android:color/transparent"
                                android:textColor="@color/black"
                                android:textSize="10sp"
                                android:text="Очистить поля" />

                        </LinearLayout>
                    </HorizontalScrollView>
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        >
                        <TextView
                            android:id="@+id/TextView_timelist"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Время"/>
                    </LinearLayout>
                </HorizontalScrollView>
                </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>