<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.schedule_redactor2.ScheduleRedactor2Fragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinner_pageselect"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <AutoCompleteTextView
                        android:id="@+id/autoCompleteTextView_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Название"
                        android:text="" />

                    <Button
                        android:id="@+id/button_save_load"
                        style="@style/Widget.App.PrimaryButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Сохранить\nЗагрузить"
                        android:textSize="10sp" />

                    <Button
                        android:id="@+id/button_fileload_filechecker"
                        style="@style/Widget.App.PrimaryButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Загрузить из файла\nЗагрузить с ISPU"
                        android:textSize="10sp" />

                    <Button
                        android:id="@+id/button_server_save_load"
                        style="@style/Widget.App.PrimaryButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Server Сохранить\nЗагрузить"
                        android:textSize="10sp" />
                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:id="@+id/layout_daychanger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/editText_day1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Понедельник" />

                        <EditText
                            android:id="@+id/editText_day2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Вторник" />

                        <EditText
                            android:id="@+id/editText_day3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Среда" />
                    </LinearLayout>
                </HorizontalScrollView>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/editText_day4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Четверг" />

                        <EditText
                            android:id="@+id/editText_day5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Пятница" />

                        <EditText
                            android:id="@+id/editText_day6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Суббота" />

                        <EditText
                            android:id="@+id/editText_day7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Воскресенье" />

                    </LinearLayout>
                </HorizontalScrollView>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/spinner_circlemode"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <Button
                            android:id="@+id/button_changeweek"
                            style="@style/Widget.App.PrimaryButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Поменять неделю\n1 неделя"
                            android:textSize="10sp" />

                        <Button
                            android:id="@+id/button_firstweekchange"
                            style="@style/Widget.App.PrimaryButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="1 неделя четная\n(Эта неделя нечетная)"
                            android:textSize="10sp" />

                        <Button
                            android:id="@+id/button_cutwritings"
                            style="@style/Widget.App.PrimaryButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Сократить запись"
                            android:textSize="10sp" />
                    </LinearLayout>
                </HorizontalScrollView>

                <!-- Блок для дат -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editTextDate_startdate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Дата начала"
                        android:inputType="date"/>

                    <EditText
                        android:id="@+id/editTextDate_enddate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Дата конца"
                        android:inputType="date"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_timechanger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Начало (00:00):"/>

                        <!-- ЗАВЕРШЕНЫ ВСЕ ТЕГИ -->
                        <EditText android:id="@+id/editText_time_start_1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="1" android:inputType="time" />
                        <EditText android:id="@+id/editText_time_start_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="2" android:inputType="time"/>
                        <EditText android:id="@+id/editText_time_start_3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="3" android:inputType="time"/>
                        <EditText android:id="@+id/editText_time_start_4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="4" android:inputType="time"/>
                        <EditText android:id="@+id/editText_time_start_5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="5" android:inputType="time"/>
                        <EditText android:id="@+id/editText_time_start_6" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="6" android:inputType="time"/>
                        <EditText android:id="@+id/editText_time_start_7" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="7" android:inputType="time"/>
                        <EditText android:id="@+id/editText_time_start_8" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="8" android:inputType="time"/>
                        <EditText android:id="@+id/editText_time_start_9" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="9" android:inputType="time"/>
                        <EditText android:id="@+id/editText_time_start_10" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="10" android:inputType="time"/>
                    </LinearLayout>
                </HorizontalScrollView>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Конец (00:00):  "/>

                        <EditText android:id="@+id/editText_time_end_1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="1" android:inputType="time"/>
                        <EditText android:id="@+id/editText_time_end_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="2" android:inputType="time"/>
                        <EditText android:id="@+id/editText_time_end_3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="3" android:inputType="time"/>
                        <EditText android:id="@+id/editText_time_end_4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="4" android:inputType="time"/>
                        <EditText android:id="@+id/editText_time_end_5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="5" android:inputType="time"/>
                        <EditText android:id="@+id/editText_time_end_6" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="6" android:inputType="time"/>
                        <EditText android:id="@+id/editText_time_end_7" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="7" android:inputType="time"/>
                        <EditText android:id="@+id/editText_time_end_8" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="8" android:inputType="time"/>
                        <EditText android:id="@+id/editText_time_end_9" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="9" android:inputType="time"/>
                        <EditText android:id="@+id/editText_time_end_10" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="10" android:inputType="time"/>
                    </LinearLayout>
                </HorizontalScrollView>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/spinner_time_dayselect"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <Button
                            android:id="@+id/button_time_saveday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Сохранить день"/>
                        <Button
                            android:id="@+id/button_time_clear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Очистить"/>
                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:id="@+id/TextView_timelist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
